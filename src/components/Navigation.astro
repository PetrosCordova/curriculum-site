---
import Cv from "../pages/cv.astro";

const {title} = Astro.props;
const nav = {
    title: title,
    btnT: 'bi bi-arrow-bar-down',
    btnM: 'bi bi-file-earmark-richtext',
    btnC: 'bi bi-file-person'
}
---
<div class="container">
    <div class="nav-links">
            {title === 'Lettre de Motivation'
                ? <h2><a href="/">{nav.title}</a></h2>
                <a class="btn" href="/cv/" title="Curriculum Vitae"><i class={nav.btnC}></i></a>
                <button class="btn d-none" id="btnLM" title=`Télécharger ${nav.title}`><i class={nav.btnT}></i></button>
                
                      
                : <h2><a href="/cv/">{nav.title}</a></h2>
                <a class="btn" href="/" title="Lettre de Motivation"><i class={nav.btnM}></i></a>   
                <button class="btn d-none" id="btnCV" title=`Télécharger ${nav.title}`><i class={nav.btnT}></i></button>
            }
                <a class="btn d-lg-none" 
                    data-bs-toggle="offcanvas"
                    href="#offcanvasExample"
                    role="button"
                    aria-controls="offcanvasExample"
                ><i class="bi bi-list"></i></a>
    
    </div>
</div>
<style>
    .container{
        border: 0;
        box-shadow: inherit;
        padding: 0.5rem 0;
    }
    .nav-links{
        display: flex;
        justify-content: space-between;
        align-items: end;
        h2{
            a{
                color: #C1C1C1;
                font-size: 1rem;
                text-decoration: none;
                transition: all 0.3s ease;
            }
            a:hover{
                background-color: inherit;
                color: #A1A1A1;
            }
        }
        a, button{
            padding: 0.1rem 0.5rem;
            color: #777;
            i{
                font-size: 1.7rem;
            }
        }
        a:nth-child(2){
            margin-left: auto;
        }
        a:hover, button:hover{
            background: #666;
            color: #fff;
        }
        a:last-child{
        }
    }  
</style>